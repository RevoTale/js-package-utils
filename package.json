{
  "name": "eslint-config-grisaia",
  "description": "A set of utilities to reduce config size for other packages.",
  "scripts": {
    "postpublish": "git push && git push --tags",
    "changeset:version": "changeset version && git add --all",
    "changeset:publish": "changeset publish",
    "test": "bun test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "pnpm build",
    "build": "pnpm --filter=grisaia-package-builder build"
  },
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@types/eslint": "^8.56.12",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.16.10",
    "bun": "^1.1.30",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5"
  },
  "dependencies": {
    "esbuild": "^0.20.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RevoTale/js-package-utils.git"
  },
  "bugs": {
    "url": "https://github.com/RevoTale/js-package-utils/issues"
  },
  "author": {
    "name": "l-you",
    "email": "l-you@revotale.com",
    "url": "https://github.com/rusted-love"
  },
  "packageManager": "pnpm@8.6.2",
  "license": "MIT"
}
