{
  "name": "eslint-config-grisaia",
  "version": "0.0.1",
  "description": "Strict eslint configuration we use on our daily basis.",
  "scripts": {
    "postpublish": "git push && git push --tags",
    "changeset:version": "changeset version && git add --all",
    "changeset:publish": "changeset publish",
    "test": "jest --no-watchman && pnpm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "pnpm --filter=eslint-config-grisaia-react --filter=eslint-config-grisaia-typescript --filter=grisaia-package-builder build"
  },
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/eslint": "^8.44.2",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.6.0",
    "esbuild": "^0.19.2",
    "eslint": "^8.49.0",
    "eslint-config-standard": "^17.1.0",
    "glob": "^10.3.4",
    "jest": "^29.6.4",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RustedLabs/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/RustedLabs/eslint-config/issues"
  },
  "author": {
    "name": "Liakhovskyi Vladyslav",
    "email": "vlad@rusted-labs.org",
    "url": "https://github.com/rusted-love"
  },
  "packageManager": "pnpm@8.6.2",
  "license": "MIT",
  "dependencies": {
    "bun": "^1.0.0"
  }
}
