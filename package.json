{
  "name": "eslint-config-grisaia",
  "description": "A set of utilities to reduce config size for other packages.",
  "scripts": {
    "postpublish": "git push && git push --tags",
    "changeset:version": "changeset version && git add --all",
    "changeset:publish": "changeset publish",
    "test": "jest --no-watchman",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "pnpm build",
    "build": "pnpm --filter=grisaia-package-builder build && pnpm --filter=eslint-config-grisaia-react --filter=eslint-config-grisaia-typescript  build"
  },
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/eslint": "^8.44.3",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.8.0",
    "esbuild": "^0.19.3",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "glob": "^10.3.9",
    "jest": "^29.7.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "bun": "^1.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RustedLabs/js-package-utils.git"
  },
  "bugs": {
    "url": "https://github.com/RustedLabs/js-package-utils/issues"
  },
  "author": {
    "name": "Liakhovskyi Vladyslav",
    "email": "vlad@rusted-labs.org",
    "url": "https://github.com/rusted-love"
  },
  "packageManager": "pnpm@8.6.2",
  "license": "MIT"
}
