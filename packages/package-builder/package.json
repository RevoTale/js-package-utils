{
  "name": "grisaia-package-builder",
  "version": "0.1.9",
  "dependencies": {
    "rimraf": "^5.0.1"
  },
  "type": "module",
  "author": {
    "name": "Liakhovskyi Vladyslav",
    "email": "vlad@rusted-labs.org",
    "url": "https://github.com/rusted-love"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "rimraf dist && esbuild bin/cli.ts --platform=node --packages=external --bundle --outdir=dist/bin"
  },
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "main": "index.js",
    "directory": "dist",
    "exports": {
      "./package.json": "./package.json",
      ".": {
        "import": "./index.js",
        "require": "./index.cjs",
        "types": "./index.d.ts"
      }
    },
    "bin": {
      "gbuild": "./bin/cli.js"
    }
  },
  "peerDependencies": {
    "esbuild": "^0.19.2"
  },
  "private": false,
  "sideEffects": false,
  "bugs": {
    "url": "https://github.com/RustedLabs/js-package-utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RustedLabs/js-package-utils.git"
  }
}
