{
  "name": "grisaia-package-builder",
  "version": "0.1.13",
  "dependencies": {
    "rimraf": "^5.0.1"
  },
  "type": "commonjs",
  "author": {
    "name": "rusted_love",
    "email": "vlad@revotale.com",
    "url": "https://github.com/rusted-love"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "rimraf dist && esbuild bin/cli.ts --platform=node --packages=external --bundle --format=cjs --outdir=dist/bin && cp package.json README.md LICENSE ./dist "
  },
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "main": "bin/cli.js",
    "directory": "dist",
    "exports": {
      "./package.json": "./package.json"
    },
    "bin": {
      "gbuild": "./bin/cli.js"
    }
  },
  "peerDependencies": {
    "esbuild": "^0.19.2"
  },
  "private": false,
  "sideEffects": true,
  "bugs": {
    "url": "https://github.com/RevoTale/js-package-utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RevoTale/js-package-utils.git"
  },
  "devDependencies": {
    "glob": "^10.3.10"
  }
}
